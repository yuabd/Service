@model Hammer.Common.Models.Paginated<Hammer.Core.Models.Video>

@{
    ViewBag.Title = "视频区";
    Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.MetaKeywords = "沙宣美发视频,美发视频,英皇沙宣美发";
	ViewBag.MetaDescription = "英皇沙宣美发视频区。";
}
@section head
{
	<link href="../../App_Themes/Site/fancybox/jquery.fancybox-1.3.4.css" rel="stylesheet"
		type="text/css" />
}
@section scripts{
	<script src="../../Scripts/jquery.mousewheel-3.0.4.pack.js" type="text/javascript"></script>
	<script src="../../Scripts/jquery.fancybox-1.3.4.pack.js" type="text/javascript"></script>
	<script type="text/javascript" language="javascript">
		$(function () {
			$("a.video_link").fancybox({
				'autoDimensions': true,
				'hideOnOverlayClick': false ,
				'transitionIn': 'elastic',
				'transitionOut': 'elastic',
				'titlePosition': 'outside',
				'overlayColor': '#000',
				'overlayOpacity': 0.9
			});

			$(".hover").hover(function () {
				$(this).addClass("h220");
			}, function () {
				$(this).removeClass("h220");
			});
		});
	</script>
}
<div class="wrap">
	<div class="clearfix">
		<div class="m_r20 f_l">
			<div class="box m_b20" style="overflow: hidden;">
				<h2 class="title">
					<a href="/gallery/videos" target="_blank" title="视频专区">
						<span class="yellow f24">视频专区</span>
					</a>
				</h2>
				<ul class="videos">
				@{int i = 1;}
				@foreach (var item in Model)
	{
		string last = "";
		if (i % 5 == 0)
		{
			last = "last";
		}
					<li class="f_l @last">
						<div class="video-photo">
							<a href="@item.VideoCode" title="@item.VideoName" class="video_link hover">
								<img src="@item.PictureFolder/@item.PictureFile" alt="@item.VideoName" style="width: 180px;" />
								<p class="cover-h120">
									@item.VideoName
								</p>
							</a>
						</div>
					</li>
		i++;
	}
				</ul>
			</div>
		</div>
	</div>
</div>