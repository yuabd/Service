@{
    ViewBag.Title = "考生查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script>
        $(function () {
            ChangeCheckCode();
        });
        function ChangeCheckCode() {
            var url = '/Search/GetValidateCode';
            $("#imgCheckCode").attr("src", "" + url + "?time=" + (new Date()).getTime());
        };
	</script>
}
<div class="wrap">
    <div class="clearfix">
        <div class="m_r20 detail f_l">
            <div class="box">
                <h2 class="title">
                    <a href="#" title="考生查询"><span class="yellow f24">考生查询</span> </a>
                </h2>
                <div class="form">
                    <form action="/Search/Result" method="post">
                    <div class="rows">
                        <label>
                            准考证号 <span class="yellow">*</span> ：</label>
                        <input type="text" name="StudentID" />
                    </div>
                    <div class="rows">
                        <label>
                            姓名 <span class="yellow">*</span> ：</label>
                        <input type="text" name="Name" />
                    </div>
                    <div class="rows">
                        <label>
                            验证码 <span class="yellow">*</span> ：</label>
                        <input type="text" name="Check" value="" />
                        <img width="68px" height="30px" title="刷新验证码" id="imgCheckCode" src="" style="margin-left: 3px;
				            vertical-align: middle; cursor: pointer;" onclick="ChangeCheckCode()" />（点击更换验证码）
                        @*<span>验证码：</span><input type="text" name="ValidCode" value="">
			            <img width="68px" height="30px" title="刷新验证码" id="imgCheckCode" src="" style="margin-left: 3px;
				            vertical-align: middle; cursor: pointer;" onclick="ChangeCheckCode()">（点击更换验证码）
			            <span class="help-inline p_tip hide"></span><span class="help-inline p_chk hide">*@
			            </span>
                    </div>
                    <div class="rows">
                        <span style="color: Red;">@ViewBag.Error</span>
                        <button type="submit" class="button">
                            提交</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="f_r sidebar">
            @Html.Action("Sidebar", "Company")
        </div>
    </div>
</div>
