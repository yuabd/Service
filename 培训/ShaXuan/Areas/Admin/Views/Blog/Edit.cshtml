@model Hammer.Core.Models.Admin.BlogViewModel

@{
    ViewBag.Title = "Edit Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
	<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<script src="/Plugins/xheditor/xheditor-1.1.14-zh-cn.min.js" type="text/javascript"></script>

	<script type="text/javascript">
		$(function () {
			$("#Blog_BlogContent").xheditor({ upImgUrl: "/Admin/Blog/UploadPicture", upImgExt: "jpg,jpeg,gif,png", html5Upload: false });
		})
	</script>
}

<h2>编辑@(Model.Blog.BlogTitle)</h2>

@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.Partial("_Form")

	@Html.HiddenFor(m => m.Blog.BlogID)
	@Html.HiddenFor(m => m.Blog.CategoryID)
	@Html.HiddenFor(m => m.Blog.AuthorID)
	
	<div class="section">
		<button type="submit" class="button-save">更新</button>
	</div>
}
