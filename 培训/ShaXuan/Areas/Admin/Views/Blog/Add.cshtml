@model Hammer.Core.Models.Admin.BlogViewModel

@{
    ViewBag.Title = "Add Project";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
	<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<script src="/Plugins/xheditor/xheditor-1.1.14-zh-cn.min.js" type="text/javascript"></script>
	
	<script type="text/javascript">
		$(function () {
			$("#Blog_BlogContent").xheditor({ upImgUrl: "/Admin/Blog/UploadPicture", upImgExt: "jpg,jpeg,gif,png", html5Upload: false });
		})
	</script>
}

<h2>发布@(new ShaXuan.Helpers.LabelHelper().GetBlogCategoryName(Model.Blog.CategoryID))</h2>

@using (Html.BeginForm("Add", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.Partial("_Form")
	
	@Html.HiddenFor(m => m.Blog.AuthorID)
	@Html.HiddenFor(m => m.Blog.CategoryID)

	<div class="section">
		<button type="submit" class="button-save">发布</button>
	</div>
}
