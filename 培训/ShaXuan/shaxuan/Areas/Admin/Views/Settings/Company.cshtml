@model Hammer.Common.Models.SiteSettings
@{
	ViewBag.Title = "Company Info";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
	<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<h2>公司信息</h2>

@using (Html.BeginForm())
{
	<div class="section">
		<div class="section-body">
			<div class="row">
				<label>公司名称:</label>
				@Html.TextBoxFor(m => m.CompanyName, new { @class = "large" })
				@Html.ValidationMessageFor(m => m.CompanyName)
			</div>
			<div class="row">
				<label class="textarea">公司全称:</label>
				@Html.TextBoxFor(m => m.CompanyNameFull, new { @class = "large" })
				@Html.ValidationMessageFor(m => m.CompanyNameFull)
			</div>
			<div class="row">
				<label>公司网址:</label>
				@Html.TextBoxFor(m => m.CompanyWebsite, new { @class = "large" })
				@Html.ValidationMessageFor(m => m.CompanyWebsite)
			</div>
			<div class="row">
				<label>公司邮箱:</label>
				@Html.TextBoxFor(m => m.CompanyEmail, new { @class = "large" })
				@Html.ValidationMessageFor(m => m.CompanyEmail)
			</div>
			<div class="row">
				<label>邮箱自动回复内容:</label>
				@Html.TextBoxFor(m => m.CompanyEmailAuto, new { @class = "large" })
				@Html.ValidationMessageFor(m => m.CompanyEmailAuto)
			</div>
			<div class="row">
				<label>公司电话/传真:</label>
				@Html.TextBoxFor(m => m.CompanyPhoneNo, new { @class = "large" })
				@Html.ValidationMessageFor(m => m.CompanyPhoneNo)
			</div>
		</div>
	</div>
	<div class="section">
		<button type="submit">保存</button>
	</div>
}