@model Hammer.Core.Models.Video

@{
    ViewBag.Title = "Edit video";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Head{
    <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<h2>编辑视频</h2>

@using (Html.BeginForm(Html.BeginForm("EditVideo", "Social", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.Partial("_FormVideo")
    
    <div class="section">
        @Html.HiddenFor(m => m.VideoID)
        <button type="submit" class="button-save">发布</button>
    </div>
}