@model Hammer.Common.Models.Paginated<Hammer.Core.Models.Blog>
@{
    ViewBag.Title = "英皇沙宣|美发课程|发型课程";
    Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.MetaKeywords = "美发课程,美发学校课程,发型师课程,美发培训课程,英皇沙宣美发课程,沙宣美发课程";
	ViewBag.MetaDescription = "英皇沙宣美发课程,火热招生中！";
}

<div class="wrap">
	<div class="clearfix">
		<div class="m_r20 detail f_l">
			<div class="box m_b20">
				<h2 class="title">
					<a href="/course/Index/1" title="课程信息">
						<span class="yellow f24">沙宣课程</span>
					</a>
				</h2>
				<ul class="news-list">
				@foreach (var item in Model)
	{
				<li>
					<div class="news-left f_l m_r20">
						<a href="/skill/detail/@item.Slug" title="@item.BlogTitle">
							<img width="180" alt="@item.BlogTitle" src="@item.PictureFolder/@item.PictureThumbnail" />
						</a>
					</div>
					<div class="news-right f_r">
						<h3 class="m_b10 f18">
							<a href="/skill/detail/@item.Slug" class="yellow" title="@item.BlogTitle">@item.BlogTitle</a>
						</h3>
						<div class="kcfltext-info">
							@Html.Raw(Hammer.Common.Utilities.GetFirstParagraph(item.BlogContent))
						</div>
						<div class="f_r">
							<a href="/skill/detail/@item.Slug" title="@item.BlogTitle" class="xomore2">详情</a>
						</div>
					</div>
				</li>
	}
				</ul>
			</div>
			<div class="box" style="padding: 10px;">
				@Model.Pager("pager")
			</div>
		</div>
		<div class="f_r sidebar">
			@Html.Action("Sidebar", "Company")
		</div>
	</div>
</div>

